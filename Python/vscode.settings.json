{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Monokai Pro Light",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.statusBar.visible": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "terminal.integrated.fontFamily": "'Noto Sans Mono'",
  "github.copilot.enable": {
    "quarto": false,
    "*": false
  },
  "window.menuBarVisibility": "toggle",
  "editor.fontFamily": "'Fira Code iScript', 'Fira Code'",
  "editor.minimap.enabled": false,
  "editor.defaultFormatter": "charliermarsh.ruff",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.ruff": "always",
    "source.organizeImports.ruff": "always",
    "source.fixAll": "always"
  },
  "ruff.exclude": [
    "*.ipynb"
  ],
  "ruff.lint.enable": true,
  "mypy-type-checker.showNotifications": "always",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "redhat.telemetry.enabled": false,
  "files.associations": {
    "*.qmd": "markdown"
  },
  "jupyter.interactiveWindow.notebookRepl": true,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "jupyter.logging.level": "trace",
  "jupyter.themeMatplotlibPlots": true,
  "notebook.formatOnSave.enabled": true
}
